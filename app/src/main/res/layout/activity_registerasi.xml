<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterasiActivity"
    android:background="#B47D55">
  <TextView
      android:id="@+id/textView5"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:text="DAFTAR"
      android:textAlignment="center"
      android:textAppearance="@style/TextAppearance.AppCompat.Body1"
      android:textColor="#3E230F"
      android:textSize="34sp"
      android:textStyle="bold"
      tools:layout_editor_absoluteX="-34dp"
      tools:layout_editor_absoluteY="68dp"
      tools:ignore="HardcodedText,MissingConstraints" />

  <LinearLayout
      android:layout_width="358dp"
      android:layout_height="400dp"
      android:background="@drawable/bg_tamp"
      android:gravity="center|center_horizontal"
      android:orientation="vertical"
      app:circularflow_radiusInDP="20dp"
      tools:ignore="MissingConstraints,VisualLintBounds"
      tools:layout_editor_absoluteX="25dp"
      tools:layout_editor_absoluteY="170dp">

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="304dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        android:text="Nama Pengguna"
        android:textColor="#302C29"
        tools:ignore="MissingConstraints,TouchTargetSizeCheck"
        tools:layout_editor_absoluteX="53dp"
        tools:layout_editor_absoluteY="175dp" />

    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="304dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:text="Alamat Email"
        android:textColor="#302C29"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="53dp"
        tools:layout_editor_absoluteY="240dp" />

    <EditText
        android:id="@+id/editTextTextPassword1"
        android:layout_width="304dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:ems="10"
        android:hint="Kata Sandi"
        android:inputType="textPassword"
        android:textColor="#3E230F"
        tools:ignore="MissingConstraints,TouchTargetSizeCheck"
        tools:layout_editor_absoluteX="53dp"
        tools:layout_editor_absoluteY="305dp" />

    <EditText
        android:id="@+id/editTextTextPassword2"
        android:layout_width="304dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:ems="10"
        android:hint="Masukkan kembali kata sandi"
        android:inputType="textPassword"
        android:textColor="#3E230F"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="53dp"
        tools:layout_editor_absoluteY="371dp"
        android:layout_marginBottom="50px"/>

    <ImageButton
        android:id="@+id/Button_Daftar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60px"
        android:layout_weight="1"
        android:background="#FFBA88"
        app:srcCompat="@drawable/btndftr"
        tools:ignore="SpeakableTextPresentCheck" />
  </LinearLayout>

  <ImageView
      android:id="@+id/imageView4"
      android:layout_width="477dp"
      android:layout_height="542dp"
      app:srcCompat="@drawable/ellipse_2"
      tools:layout_editor_absoluteX="-33dp"
      tools:layout_editor_absoluteY="570dp"
      tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>